<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here.
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>-->
    </style>

    <style name="BlueButton">
        <item name="fontPath">fonts/georgia.ttf</item>
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/bluebtn_selector</item>
    </style>

    <style name="BlueButton_bold">
        <item name="fontPath">fonts/georgia_bold.ttf</item>
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/bluebtn_selector</item>
    </style>

    <style name="GreenButton" parent ="BlueButton">
        <item name="fontPath">fonts/georgia.ttf</item>
        <item name="android:background">@drawable/greenbtn_selector</item>
    </style>

    <style name="LogoTitle">
          <item name="android:textSize">@dimen/_34sdp</item>
         <item name="fontPath">fonts/georgia_bold.ttf</item>
          <item name="android:textColor">@color/gray</item>
         <item name="android:layout_marginTop">@dimen/_10sdp</item>
    </style>

    <style name="SubTitle">
        <item name="fontPath">fonts/georgia_bold.ttf</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:textColor">@color/lblue</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
    </style>

    <style name="ResultDesciption">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="fontPath">fonts/georgia_bold.ttf</item>
        <item name="android:textColor">@color/darkgray</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
    </style>

    <style name="BlueLabel">
        <item name="android:textSize">@dimen/_17sdp</item>
        <item name="android:textColor">@color/lblue</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="fontPath">fonts/georgia_bold.ttf</item>
    </style>



</resources>
