<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@color/white">

    <ImageView
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_225sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_40sdp"
        android:src = "@drawable/bg_logohead"
        android:id="@+id/main_iv_logo"/>
    <Button android:layout_width="@dimen/_170sdp"
        android:layout_height="@dimen/_62sdp"
        android:layout_below="@id/main_iv_logo"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_centerHorizontal="true"
        android:text="@string/string_login"
        android:id="@+id/main_btn_login"
        style="@style/BlueButton"/>
    <Button android:layout_width="@dimen/_170sdp"
        android:layout_height="@dimen/_62sdp"
        android:layout_below="@id/main_btn_login"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_centerHorizontal="true"
        android:text="@string/string_demo"
        android:id="@+id/main_btn_demo"
        style="@style/BlueButton"/>

</RelativeLayout>
