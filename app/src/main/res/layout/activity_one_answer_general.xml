<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:context="com.yourdiscovery.discovery.main.survey.OneAnswerActivity"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView android:text="@string/string_survey_question_special" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:gravity="center"
            android:textColor="@color/gray"
            fontPath="fonts/georgia.ttf"
            android:textSize="@dimen/_17sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/one_answer_general_txt_question"/>

        <TextView android:text="Do you offten..." android:layout_width="match_parent"
            android:layout_height="wrap_content" android:gravity="center"
            android:textColor="@color/gray"
            android:textSize="@dimen/_20sdp"
            fontPath="fonts/georgia_bold.ttf"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_below="@id/one_answer_general_txt_question"
            android:id="@+id/one_answer_general_txt_question2"/>

        <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/one_answer_general_txt_question2"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_centerHorizontal="true"
            style="@style/BlueButton"
            android:textSize="@dimen/_18sdp"
            android:text="@string/string_login"
            android:id="@+id/one_answer_btn_answer1"
            />

        <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/one_answer_btn_answer1"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_centerHorizontal="true"
            style="@style/BlueButton"
            android:textSize="@dimen/_18sdp"
            android:text="@string/string_login"
            android:id="@+id/one_answer_btn_answer2"
            />

        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_120sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@id/one_answer_btn_answer2"
            android:src = "@drawable/bg_logohead"
            />

    </RelativeLayout>
</ScrollView>